{
  "name": "tsc-express-node",
  "version": "1.0.0",
  "description": "A simple express API written in Typescript utilizing: auth0, MongoDB, and Swagger",
  "main": "lib/index.js",
  "scripts": {
    "lint": "tslint --force --format verbose \"src/**/*.ts\"",
    "build": "npm run lint && tsc",
    "dev": "concurrently -rk \"npm run build -- --watch \" \"cross-env NODE_ENV=development nodemon ./lib/index.js\"",
    "start": "cross-env NODE_ENV=production node ./lib/index.js",
    "prod": "npm run build && npm start",
    "test": "mocha --require ts-node/register test/**/*.spec.ts --exit",
    "testdebug": "mocha --require ts-node/register test/**/*.spec.ts --inspect --exit"
  },
  "keywords": [
    "node",
    "typescript",
    "express"
  ],
  "author": "Daniel Verdejo",
  "license": "MIT",
  "dependencies": {
    "@types/chai": "^4.1.7",
    "@types/config": "0.0.34",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/socket.io": "^2.1.2",
    "@types/socket.io-client": "^1.4.32",
    "@types/supertest": "^2.0.7",
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "config": "^3.0.0",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "express": "^4.16.4",
    "express-oas-generator": "^1.0.6",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.10",
    "socket.io": "^2.2.0",
    "supertest": "^3.4.2",
    "ts-node": "^7.0.1",
    "tsc-init": "^2.1.0",
    "tslint": "^5.12.1",
    "typescript": "^3.2.1"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.6"
  }
}
